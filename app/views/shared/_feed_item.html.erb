<li id="<%= feed_item.id %>">
	<%= link_to gravatar_for(feed_item.user), feed_item.user %>
	<span class="user"> <%= link_to feed_item.user.name, feed_item.user %> </span>
	<span class="timestamp"> Posted <%= time_ago_in_words(feed_item.created_at) %> ago. </span>
	<% if current_user?(feed_item.user) %>
	<span> <% if feed_item.public %>
		<%= link_to image_tag("private.jpg", :size => "50x50"),:controller => "microposts", :action => "set_private",:id => feed_item.id%>
		<% else %>
		<%= link_to image_tag("public.jpg", :size => "50x50"),:controller => "microposts", :action => "set_public",:id => feed_item.id%>
		<% end %>

		<%= link_to image_tag("delete.jpg", :size => "25x25"), feed_item, method: :delete,
		data: { confirm: "You sure?" },
		title: feed_item.content %> </span>
	<% end %>
	<span class="content"><%= feed_item.content %></span>

</li>