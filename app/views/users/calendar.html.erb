<h1>Users#calendar</h1>
<div>
	<%= form_tag({:controller => "users", :action => "calendar"},:method=> "get") do%>
	<%= text_field_tag :date,@date_cal.to_date.to_s(:db), :class=>"date_picker"%>
	<%= submit_tag "Go", class: "btn btn-large btn-primary"%>
	<%end%>
</div>
<table border="1">
	<% @hour=@date_cal.beginning_of_day()%>
	<% i=0%>
	<%until @hour>=@date_cal.end_of_day() or i==100%>

	<tr height="15">
		<!-- On n'affiche que les heures -->
		<%if i%4==0%>
		<td bgcolor="grey"> <%= @hour.to_s(:time)%> </td>
		<%else%>
		<td> <%= @hour.to_s(:time)%> </td>
		<%end%>
		
		<%@action.each do |a|%>
		<%if @hour>=a.start_date.to_time() || @hour+8.minutes>=a.start_date.to_time() %>
		<td width="150px" rowspan=<%= a.duration_in_quarters(@date_cal)%>> <%= link_to image_tag(a.activity.pic_path),:controller => "action_posts", :action => "edit",:id => a.id %> </td>
		<% @action.slice!(@action.index(a))%>
		<%end%>
		<%end%>
	</tr>

	<% @hour+=15.minutes%>
	<% i+=1%>
	<%end%>

</table>
