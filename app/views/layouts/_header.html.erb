<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="navbar-inner">
		<div class="container">
			<%= link_to "Fingerprints", root_path, id: "logo" %>
			<nav>
				<ul class="nav pull-right">
					<li>
						<%= link_to "Home", root_path %>
					</li>
					<li>
						<%= link_to "Help", help_path %>
					</li>
					<% if signed_in? %>
					<li>
						<%= link_to "Activities", activities_path,filter:"all" %>
					</li>
					<li>
						<%= link_to "Users", users_path %>
					</li>

					<li id="fat-menu" class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown"> Account <b class="caret"></b> </a>
						<ul class="dropdown-menu">
							<li>
								<%= link_to "Profile", current_user %>
							</li>
							<li>
								<%= link_to "Stats", stats_user_path(current_user) %>
							</li>
							<li>
								<%= link_to "Calendar", calendar_user_path(current_user) %>
							</li>
							<li>
								<%= link_to "Settings", edit_user_path(current_user) %>
							</li>
							<li class="divider"></li>
							<li>
								<%= link_to "Sign out", signout_path, method: "delete" %>
							</li>
						</ul>
					</li>

					<% if current_user.admin? %>
					<li id="fat-menu" class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown"> Admin <b class="caret"></b> </a>
						<ul class="dropdown-menu">
							<li>
								<%= link_to "Activities", :controller=>'activities', :action=>'admin_activities' %>
							</li>
							<li>
								<%= link_to "Achievements", :controller=>'achievements', :action=>'admin_achievements' %>
							</li>
						</ul>
					</li>
					<% end %>
					<% else %>
					<li>
						<%= link_to "Sign in", signin_path %>
					</li>
					<% end %>
				</ul>
			</nav>
		</div>
	</div>
</header>